{
    "name": "salenoo/salnama-chat",
    "description": "سیستم چت آنلاین پیشرفته برای فروشگاه سالنمای نو",
    "type": "wordpress-plugin",
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-pdo": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "wp-coding-standards/wpcs": "^2.3",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "SalnamaChat\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SalnamaChat\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "test": "phpunit",
        "lint": "phpcs --standard=WordPress src/",
        "lint-fix": "phpcbf --standard=WordPress src/"
    }
}